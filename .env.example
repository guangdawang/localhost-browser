# Docker环境变量配置示例

# X11显示配置
DISPLAY=:0
WAYLAND_DISPLAY=wayland-0
XDG_RUNTIME_DIR=/tmp/runtime

# 浏览器配置
BROWSER_PORT=3000
ENABLE_DEVTOOLS=false

# 窗口配置
WINDOW_WIDTH=1024
WINDOW_HEIGHT=768

# 安全配置
SECURITY_STRICT_MODE=true
SECURITY_ALLOW_PORTS=80,443,3000,8080,5173

# 资源限制
DOCKER_CPUS=2
DOCKER_MEMORY=1G
